{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "one-var": 1,
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "import/no-unresolved": 0,
    "comma-dangle": 0,
    "curly": ["error", "multi-line"],
    "no-shadow": ["error", { "allow": ["req", "done", "res", "err"] }]
  }
}
